<wxs src="../../resources/common.wxs" module="common" />
<view class='page'>
    <view class='page__bd'>
        <view class="weui-cells weui-cells_after-title" style='margin-top:15px;'>
            <navigator url="../info/info" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image class='user-head-photo circle' src="{{photoUrl}}" mode="aspectFill"  lazy-load="{{true}}"></image>
                </view>
                <view class="weui-cell__bd"><text decode="{{true}}">&nbsp;</text>{{nickname}}<text decode="{{true}}">&nbsp;</text>{{common.getGender(gender,true)}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">完善资料</view>
            </navigator>
        </view>
        <view class="weui-cells weui-cells_after-title" style='margin-top:15px;'>
            <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">我的邀请码</view>
                <view class="weui-cell__ft" bindtap='setClipboard'>{{inviteCode}}</view>
            </view>
            <navigator url="../my/myfriends/myfriends" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">我邀请的朋友</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>

        <view class="weui-cells weui-cells_after-title" style='margin-top:15px;'>
            <navigator url="/pages/enjoy/enjoy" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">有意思</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>

        <view class="weui-cells weui-cells_after-title" style='margin-top:15px;'>
            <navigator url="/pages/setting/setting" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">设置</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
    </view>

</view>
