<wxs src="../../resources/common.wxs" module="common" />
<view class='container-box'>
  <view class='header-info-box'>
    <view class='header-info-photo-box'>
      <image class='header-info-photo' src='{{photoUrl}}' mode="aspectFill" lazy-load="{{true}}"></image>
    </view>
    <view class='header-info-name-box'>
      <text>{{nickname}}</text>
    </view>
    <view class='header-info-gender-box'>
      <text> {{common.getGender(gender,true)}}</text>
    </view>

    <navigator url='../info/info' class='navigator-arrow-box'>
      <view class='arrow-box'>
        <text class='info-label'>完善资料</text>
        <text class='iconfont icon-youjiantou'></text>
      </view>
    </navigator>
  </view>
  <view class='view-item invite-code-box'>
    <text class='invite-code-label'>我的邀请码</text>
    <text class='invite-code'> {{inviteCode}}</text>
    <view class='invite-code-copy'>
      <button hidden='{{!inviteCode}}' bindtap='setClipboard' style='display:inline;float:right;' size='mini'>复制</button>
    </view>
  </view>
  <view class='view-item  invited-friends-box'>
    <navigator url='../my/myfriends/myfriends' class='navigator-invited-friends'>
      <text class='invited-friends-text'>我邀请的朋友</text>
      <view class='arrow-box'>
        <text class='iconfont icon-youjiantou'></text>
      </view>
    </navigator>
  </view>
</view>